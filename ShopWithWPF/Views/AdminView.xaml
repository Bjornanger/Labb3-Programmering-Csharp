<UserControl
    x:Class="ShopWithWPF.Views.AdminView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="800"
    Height="450"
    FontSize="20"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="50" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Label Grid.Row="1" Grid.Column="1" />
        <ListView
            Name="ProdList"
            Grid.Row="2"
            Grid.Column="1"
            ItemsSource="{Binding AdminProductList}"
            SelectedItem="{Binding SelectedProduct, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            SelectionChanged="ProdList_OnSelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="50" Header="Picture">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding ImagePath}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Name}" Header="Product" />
                    <GridViewColumn DisplayMemberBinding="{Binding Price}" Header="$$$" />
                    <GridViewColumn DisplayMemberBinding="{Binding Type}" Header="Type" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button
            Name="RemoveBtn"
            Grid.Row="3"
            Grid.Column="1"
            Height="30"
            Margin="20,0"
            Click="RemoveBtn_Click">
            Remove
        </Button>
        <Label Grid.Row="1" Grid.Column="2">Add or Change Product</Label>
        <Grid
            Grid.Row="2"
            Grid.RowSpan="3"
            Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label Content="Name" />
            <TextBox
                Name="ProductNameBox"
                Grid.Row="0"
                Grid.Column="1"
                Text="{Binding EditProductName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Label
                Grid.Row="1"
                Grid.Column="0"
                Content="Price" />
            <TextBox
                Name="ProductPriceBox"
                Grid.Row="1"
                Grid.Column="1"
                Text="{Binding EditProductPrice, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Label
                Grid.Row="2"
                Grid.Column="0"
                Content="Type" />
            <ComboBox
                Name="productComboBox"
                Grid.Row="2"
                Grid.Column="1" />
            <Button
                Name="SaveBtn"
                Grid.Row="3"
                Grid.Column="1"
                Width="120"
                Height="35"
                HorizontalAlignment="Left"
                Click="SaveBtn_Click">
                Save product
            </Button>
            <Button
                Name="UpdateBtn"
                Grid.Row="3"
                Grid.Column="1"
                Width="90"
                Height="35"
                HorizontalAlignment="Right"
                Click="UpdateBtn_OnClick">
                Update
            </Button>
            <Label
                Grid.Row="4"
                Grid.Column="1"
                Width="120"
                Height="35"
                Content="Sort here" />
            <ComboBox
                Name="SortingComboBox"
                Grid.Row="5"
                Grid.Column="1" />
            <Button
                Name="SortBtn"
                Grid.Row="6"
                Grid.Column="1"
                Width="95"
                Height="35"
                Click="SortBtn_OnClick">
                Sort
            </Button>
        </Grid>
        <Button
            Name="LogoutBtn"
            Grid.Row="4"
            Grid.Column="1"
            Width="100"
            Margin="10"
            Click="LogoutBtn_Click">
            Log Out
        </Button>
    </Grid>
</UserControl>
