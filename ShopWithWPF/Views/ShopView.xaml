<UserControl
    x:Class="ShopWithWPF.Views.ShopView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontSize="20"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="50" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <TextBlock Name="UserName" Grid.Column="1" />
        <Label
            Grid.Row="1"
            Grid.Column="1"
            Content="Products" />
        <ListView
            Name="ProdList"
            Grid.Row="2"
            Grid.Column="1"
            ItemsSource="{Binding ShopViewProductList}"
            SelectedItem="{Binding ShopSelectedProduct, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            SelectionChanged="ProdList_OnSelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="50" Header="Picture">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding ImagePath}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Name}" Header="Product" />
                    <GridViewColumn DisplayMemberBinding="{Binding Price}" Header="$$$" />
                    <GridViewColumn DisplayMemberBinding="{Binding Type}" Header="Type" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button
            Name="AddBtn"
            Grid.Row="3"
            Grid.Column="1"
            Width="100"
            Height="30"
            HorizontalAlignment="Left"
            Click="AddBtn_Click">
            Add
        </Button>
        <Button
            Name="ShopSortBtn"
            Grid.Row="3"
            Grid.Column="1"
            Width="100"
            Height="30"
            HorizontalAlignment="Center"
            Click="ShopSortBtn_OnClick">
            Sort
        </Button>
        <ComboBox
            Name="ShopComboBox"
            Grid.Row="3"
            Grid.Column="1"
            Width="100"
            Height="30"
            HorizontalAlignment="Right" />
        <Label
            Grid.Row="1"
            Grid.Column="2"
            Content="Cart" />
        <ListView
            Name="CartList"
            Grid.Row="2"
            Grid.Column="2"
            ItemsSource="{Binding CustomerCart}"
            SelectedItem="{Binding CustomerSelectedProduct, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Name}" Header="Product" />
                    <GridViewColumn DisplayMemberBinding="{Binding Price}" Header="$$$" />
                    <GridViewColumn DisplayMemberBinding="{Binding Type}" Header="Type" />
                    <GridViewColumn DisplayMemberBinding="{Binding Amount}" Header="Amount" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button
            Name="RemoveBtn"
            Grid.Row="3"
            Grid.Column="2"
            Height="30"
            Margin="20,0"
            Click="RemoveBtn_Click">
            Remove
        </Button>
        <Button
            Name="LogoutBtn"
            Grid.Row="4"
            Grid.Column="1"
            Width="100"
            Margin="10"
            Click="LogoutBtn_Click">
            Log Out
        </Button>
        <Button
            Name="CheckoutBtn"
            Grid.Row="4"
            Grid.Column="2"
            Width="100"
            Margin="10"
            Click="CheckoutBtn_Click">
            Checkout
        </Button>
    </Grid>
</UserControl>
